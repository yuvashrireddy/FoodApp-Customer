<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_full_name3"

        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/app_bar_settings"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/settings_full_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_change_button"
        android:layout_alignStart="@+id/settings_address"
        android:layout_alignLeft="@+id/settings_address"
        android:layout_marginStart="-15dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="122dp"
        android:layout_marginBottom="25dp"
        android:hint="For feedback, contact us"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="18dp" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/app_bar_settings"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/close_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/profile_image_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/app_bar_settings"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/settings_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_full_name3"
        android:layout_alignStart="@+id/settings_address"
        android:layout_alignLeft="@+id/settings_address"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="25dp"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/settings_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_full_name"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="10dp"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/settings_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_phone_number"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:hint="Email Id"
        android:layout_margin="15dp"/>

</RelativeLayout>